@inherits LayoutComponentBase
@inject CookieThemeService CookieThemeService
<RadzenComponents />

<RadzenLayout style="grid-template-areas: 'rz-sidebar rz-header' 'rz-sidebar rz-body';">
    <RadzenHeader>
        <RadzenRow JustifyContent="JustifyContent.Start" AlignItems="AlignItems.Center" Gap="0">
            <RadzenColumn Size="5">
                <RadzenSidebarToggle Click="@SidebarToggleClick"></RadzenSidebarToggle>
            </RadzenColumn>
            <RadzenColumn Size="7">
                <RadzenStack AlignItems="AlignItems.Center" Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.End" Gap="0.5rem" class="rz-px-2">
                    <RadzenAppearanceToggle />
                    <RadzenProfileMenu Visible="@Security.IsAuthenticated()" Click="@ProfileMenuClick">
                        <ChildContent>
                            <RadzenProfileMenuItem Text="Logout" Value="Logout" Icon="power_settings_new" />
                        </ChildContent>
                        <Template>
                            @Security.User?.DisplayName
                        </Template>
                    </RadzenProfileMenu>
                </RadzenStack>
            </RadzenColumn>
        </RadzenRow>
    </RadzenHeader>
    <RadzenBody Expanded="@sidebarExpanded">
        <RadzenRow class="rz-mx-auto rz-px-4 rz-pt-2 rz-pt-md-4 rz-pt-lg-6 rz-pt-xl-12 rz-pb-2 rz-pb-lg-12" Style="max-width: 1440px;">
            <RadzenColumn Size="12">
            @Body
            </RadzenColumn>
        </RadzenRow>
    </RadzenBody>
    <RadzenSidebar Expanded="@sidebarExpanded" style="z-index: 2">
        <RadzenStack AlignItems="Radzen.AlignItems.Center" class="rz-py-4 rz-py-lg-6" Style="padding: var(--rz-panel-menu-item-padding); border-bottom: var(--rz-panel-menu-item-border);">
            <RadzenImage Path="images/logo.png"  style="width: 48px; height: 48px;" AlternateText="Application logo"></RadzenImage>
            <RadzenText Text="Conway.CRM.WebUI" TextStyle="Radzen.Blazor.TextStyle.Subtitle1" class="rz-mb-0" style="color: var(--rz-sidebar-color);" />
        </RadzenStack>
        <RadzenPanelMenu>
            <RadzenPanelMenuItem Text="Home" Path="" />
            <RadzenPanelMenuItem Text="System Management" Icon="settings_applications">
                <RadzenPanelMenuItem class="menu_level_1" Text="Mange Locks" Icon="lock_open" Path="active-locks" />
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Text="Customers" Path="customers" Icon="group" />
            <RadzenPanelMenuItem Text="Contacts" Path="contacts" Icon="person" />
            <RadzenPanelMenuItem Text="People Management" Icon="manage_accounts">
                <RadzenPanelMenuItem class="menu_level_1" Text="People" Icon="person" Path="people" />
                <RadzenPanelMenuItem class="menu_level_1" Text="Statuses" Icon="home_work" Path="personstatuses" />
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Text="Opportunity Management" Icon="rocket_launch">
                <RadzenPanelMenuItem class="menu_level_1" Text="Stages" Icon="approval" Path="stages" />
                <RadzenPanelMenuItem class="menu_level_1" Text="Leads" Icon="person_search" Path="leads" />
                <RadzenPanelMenuItem class="menu_level_1" Text="Opportunities" Icon="lightbulb" Path="opportunities" />
                <RadzenPanelMenuItem class="menu_level_1" Text="Kanban Board" Icon="view_kanban" Path="opportunity-kanbanboard" />
            </RadzenPanelMenuItem>
        </RadzenPanelMenu>
        <RadzenStack AlignItems="Radzen.AlignItems.Center" Gap="0" class="rz-py-4 rz-py-lg-6" Style="padding: var(--rz-panel-menu-item-padding);">
            <RadzenText Text="Conway.CRM.WebUI v1.0.0" TextStyle="Radzen.Blazor.TextStyle.Caption" TagName="Radzen.Blazor.TagName.P" TextAlign="Radzen.TextAlign.Center" />
            <RadzenText Text="Copyright â’¸ 2024" TextStyle="Radzen.Blazor.TextStyle.Caption" class="rz-mb-0" TagName="Radzen.Blazor.TagName.P" TextAlign="Radzen.TextAlign.Center" />
        </RadzenStack>
    </RadzenSidebar>
</RadzenLayout>

<style>
    .menu_level_1 {
        padding-left: 40px;
    }
</style>